import Blob from "../components/Blob.astro";
import Layout from "../layouts/Layout.astro";
import type { JobSet } from "../jobs/index.ts";
import jobSetRaw from "../cache/jobSet.json";
import { getMembersAsMap } from '../memberCollections.ts';

const jobSet = jobSetRaw as JobSet;
const memberMap = await getMembersAsMap();
---

<Layout
  title="Jobs"
  ogImageUrl="https://opensourcepledge.com/images/jobs-og.png"
  ogImageAlt="Join the companies pioneering Open Source sustainability."
  ogDescription="Join the companies pioneering Open Source sustainability."
>
  <div class="edge-blobs">
    <Blob kind="solid-fill-03" top="72%" left="-13rem"></Blob>
    <Blob kind="grad-dots-04" top="8%" right="-3rem"></Blob>
    <Blob kind="grad-dots-06" top="37%" right="-5rem"></Blob>
  </div>
  <div class="container">
    <Blob kind="solid-fill-05" top="20%" left="-16rem"></Blob>
    <Blob kind="solid-fill-04" top="90%" right="-20rem"></Blob>
    <Blob kind="grad-dots-03" top="10%" left="-15rem"></Blob>

    <main id="main-content">
      <section class="text-center">
        <h1>Jobs</h1>
        <h2>Join the companies pioneering Open Source sustainability</h2>
        <p>
          This page aggregates open job postings from our member companies, so that you can find a job at a company that
          matches your values.
        </p>
      </section>
      <section>
        <div class="featured-job badge-heading-container">
          <div class="badge-heading">
            <h2>Job of the week</h2>
          </div>
          <div class="flex-center flex-column">
            <div class="featured-job-head">
              <img src=`/images/members/bolt/logo.webp` alt=`The Bolt logo`>
              <h2><a href=`/members/bolt`>Bolt</a></h2>
            </div>
            <h2 class="job-title">
              <a href="https://jobs.lever.co/stackblitz/7ccd2472-1416-4448-8642-e58e9b32e129">
                Senior Software Engineer (TypeScript/Node.js)
              </a>
            </h2>
          </div>
          <p>
            Bolt are looking for an engineer to advance web computing by working on WebContainer, the first-ever
            in-browser WebAssembly-based operating system. The job is remote and gives you a high degree of autonomy.
          </p>
          <p>
            But more than that, you'd be getting paid to be an Open Source contributor to projects such as Node.js,
            Next.js and others. Sound good?
            <a href="https://jobs.lever.co/stackblitz/7ccd2472-1416-4448-8642-e58e9b32e129">Apply now →</a>
          </p>
        </div>
      </section>
      <section>
        {Object.keys(jobSet.companies).map((memberId) =>
          jobSet.companies[memberId].length > 0 && (
            <div class="job-set">
              <div class="job-set-head">
                <img src=`/images/members/${memberId}/logo.webp` alt=`The ${memberMap[memberId].name} logo`>
                <h2><a href=`/members/${memberId}`>{memberMap[memberId].name}</a></h2>
              </div>
              <em>“{memberMap[memberId].description}”</em>
              <hr>
              {jobSet.companies[memberId].map((job) =>
                <a class="job-link" href={job.url}>{job.title}</a>
              )}
            </div>
          )
        )}
      </section>
    </main>
  </div>
</Layout>

<style>
  .featured-job {
    margin-bottom: 1rem;
    padding: 1rem;
    border: 3px solid transparent;
    border-radius: 0.5rem;
    background-color: var(--color-light-bg);
    &.badge-heading-container {
      padding-top: 2.5rem;
    }
    .featured-job-head {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-bottom: 1rem;
      img {
        align-self: center;
        max-width: 4.5rem;
        border-radius: 0.5rem;
        @media (max-width: 450px) {
          max-width: 3.0rem;
        }
      }
      h2 {
        margin: 0;
        font-size: 1.2rem;
        line-height: 1.3;
        a:not(:hover) {
          color: var(--color-text);
          text-decoration: none;
        }
      }
    }
    .job-title {
      font-size: 1.2rem;
    }
  }
  .job-set {
    margin-bottom: 1rem;
    padding: 1rem;
    background-color: var(--color-light-bg);
    border: 3px solid transparent;
    border-radius: 0.5rem;
    .job-set-head {
      display: flex;
      gap: 1rem;
      align-items: center;
      margin-bottom: 1rem;
      img {
        align-self: center;
        max-width: 4.5rem;
        border-radius: 0.5rem;
        @media (max-width: 450px) {
          max-width: 3.0rem;
        }
      }
      h2 {
        margin: 0;
        font-size: 1.2rem;
        line-height: 1.3;
        a:not(:hover) {
          color: var(--color-text);
          text-decoration: none;
        }
      }
    }
    .job-link {
      position: relative;
      display: block;
      padding: 0.2rem 0;
      padding-right: 1.5rem;
      text-decoration: none;
      &:after {
        content: '→';
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 0;
      }
    }
  }
</style>
