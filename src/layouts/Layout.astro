<style is:global>
  :root {
    --color-bg: #080e17;
    --color-light-bg: #16212d;
    --color-primary: #2ad870;
    --color-secondary: #9e86ff;
    --color-muted: #ccc;
    --color-pink: #ff70bc;
    --color-yellow: #ffd00e;
  }
  html {
    font-family: Libre Franklin, system-ui, sans-serif;
    font-size: 20px;
    line-height: 1.6;
    background-color: var(--color-bg);
    color: white;
  }
  h1, h2, h3, h4, h5, h6 {
    font-family: Azeret Mono, Courier New, Courier, monospace;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, monospace;
  }
  a {
    color: var(--color-primary);
    &:hover {
      color: var(--color-secondary);
    }
  }
  .container {
    margin: auto;
    padding: 0 1rem;
    max-width: 860px;
  }
</style>

<style>
  nav {
    display: flex;
    align-items: center;
    padding: 2rem 0;
    a {
      flex: 1 0;
      color: white;
      text-decoration: none;
      &:hover {
        color: var(--color-secondary);
        text-decoration: underline;
      }
      img {
        max-height: 3.5rem;
      }
    }
    ul {
      flex: 0 1;
      list-style: none;
      margin: 0 -1rem;
      padding: 0;
      display: flex;
      li {
        margin: 0 1rem;
      }
    }
  }
</style>
