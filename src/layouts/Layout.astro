interface Props {
  title?: string;
  canonicalUrl?: string;
  navless?: boolean;
  preventIndexing?: boolean;
  ogDescription?: string;
  ogImageUrl?: string;
  ogImageAlt?: string;
}

const {
  title, canonicalUrl, navless, preventIndexing, ogDescription, ogImageUrl, ogImageAlt,
} = Astro.props;

import '../styles/common.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <link rel="icon" type="image/png" href="/favicon.png">

    <title>{ title ? (title + " | Open Source Pledge") : "Open Source Pledge" }</title>
    <meta
      name="description"
      content={ogDescription || "Our companies feast year after year at the Open Source table. It's time to settle up."}>
    <meta property="og:type" content="website">
    <meta property="og:title" content={title ? (title + " | Open Source Pledge") : "Open Source Pledge"}>
    <meta
      property="og:description"
      content={ogDescription || "Our companies feast year after year at the Open Source table. It's time to settle up."}>
    <meta
      property="og:image"
      content={ogImageUrl || "https://opensourcepledge.com/generated/output/opengraph.png"}>
    <meta
      property="og:image:alt"
      content={ogImageAlt || "The Open Source Pledge logo."}>
    <meta property="og:site_name" content="Open Source Pledge">
    <meta property="og:determiner" content="the">
    <meta property="og:url" content={Astro.url}>
    <meta property="article:published_time" content="2024-10-08">
    {preventIndexing && <meta name="robots" content="noindex">}
    <link rel="me" href="https://fosstodon.org/@opensourcepledge">
    <link rel="canonical" href={canonicalUrl || Astro.url}>
    <link
      rel="alternate"
      type="application/rss+xml"
      title="The Open Source Pledge Blog"
      href="/rss.xml">

    <script
      is:inline
      defer
      data-domain="opensourcepledge.com"
      src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <a class="skiplink" href="#main-content">Skip to main content</a>
    { !navless && (
      <nav class="container">
        <a href="/">
          <img src="/logos/opensourcepledge-logo-horiz-color.png" alt="The Open Source Pledge logo">
        </a>
        <ul>
          <li>
            <a class="sneaky" href="/join">Join</a>
          </li>
          <li>
            <a class="sneaky" href="/about">About</a>
          </li>
          <li>
            <a class="sneaky" href="/members">Members</a>
          </li>
          <li>
            <a class="sneaky" href="/blog">Blog</a>
          </li>
        </ul>
      </nav>
    ) }
    <slot></slot>
    <footer class="container">
      <div class="footer-nav">
        <span><a class="sneaky" href="/join">Join</a></span>
        <span><a class="sneaky" href="/about">About</a></span>
